<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cerosoft.AirPoint.Client.SettingsPage"
             BackgroundColor="#000000">

    <Grid>
        <Grid RowDefinitions="Auto, *, Auto" Padding="25,20,25,30">

            <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Margin="0,0,0,20">
                <ImageButton Source="back_button.png" 
                             HeightRequest="44" WidthRequest="44" 
                             HorizontalOptions="Start" VerticalOptions="Center"
                             BackgroundColor="#1E1E1E"
                             CornerRadius="22"
                             Padding="12"
                             BorderColor="#333" BorderWidth="1"
                             Clicked="OnBackClicked"/>

                <Label Text="Settings" TextColor="White" FontSize="24" FontAttributes="Bold" 
                       Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Margin="-44,0,0,0"/>
            </Grid>

            <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="25">

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Master Control" TextColor="#AAA" FontSize="14" FontAttributes="Bold"/>
                        <Border Stroke="#333" StrokeThickness="1" BackgroundColor="#121212" Padding="20" StrokeShape="RoundRectangle 16">
                            <Grid ColumnDefinitions="*, Auto">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Enable All Gestures" TextColor="White" FontAttributes="Bold"/>
                                    <Label Text="Toggle swipes, drag, and zoom" TextColor="#666" FontSize="12"/>
                                </VerticalStackLayout>
                                <Switch x:Name="MasterGestureSwitch" IsToggled="True" OnColor="#00E676" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="IndividualGesturesLayout" Spacing="10">
                        <Label Text="Individual Gestures" TextColor="#AAA" FontSize="14" FontAttributes="Bold"/>
                        <Border Stroke="#333" StrokeThickness="1" BackgroundColor="#121212" Padding="0" StrokeShape="RoundRectangle 16">
                            <VerticalStackLayout>
                                <Grid ColumnDefinitions="*, Auto" Padding="20,15">
                                    <Label Text="2-Finger Scrolling" TextColor="White" VerticalOptions="Center"/>
                                    <Switch x:Name="ScrollSwitch" IsToggled="True" OnColor="#00E676" Grid.Column="1"/>
                                </Grid>
                                <BoxView HeightRequest="1" Color="#222"/>
                                <Grid ColumnDefinitions="*, Auto" Padding="20,15">
                                    <Label Text="Pinch to Zoom" TextColor="White" VerticalOptions="Center"/>
                                    <Switch x:Name="ZoomSwitch" IsToggled="True" OnColor="#00E676" Grid.Column="1"/>
                                </Grid>
                                <BoxView HeightRequest="1" Color="#222"/>
                                <Grid ColumnDefinitions="*, Auto" Padding="20,15">
                                    <Label Text="3-Finger Swipe" TextColor="White" VerticalOptions="Center"/>
                                    <Switch x:Name="SwipeSwitch" IsToggled="True" OnColor="#00E676" Grid.Column="1"/>
                                </Grid>
                                <BoxView HeightRequest="1" Color="#222"/>
                                <Grid ColumnDefinitions="*, Auto" Padding="20,15">
                                    <Label Text="Tap &amp; Drag" TextColor="White" VerticalOptions="Center"/>
                                    <Switch x:Name="DragSwitch" IsToggled="True" OnColor="#00E676" Grid.Column="1"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="SensitivityLayout" Spacing="15">
                        <Label Text="Sensitivity" TextColor="#AAA" FontSize="14" FontAttributes="Bold"/>
                        <Border Stroke="#333" StrokeThickness="1" BackgroundColor="#121212" Padding="20" StrokeShape="RoundRectangle 16">
                            <VerticalStackLayout Spacing="10">
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="Cursor Speed" TextColor="White" FontAttributes="Bold"/>
                                    <Label x:Name="CursorValLabel" Text="1.5x" TextColor="#00E676" FontAttributes="Bold" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="SensitivitySlider" Minimum="0.5" Maximum="5.0" Value="1.5" ThumbColor="#00E676" MinimumTrackColor="#00E676" MaximumTrackColor="#333"/>
                            </VerticalStackLayout>
                        </Border>
                        <Border Stroke="#333" StrokeThickness="1" BackgroundColor="#121212" Padding="20" StrokeShape="RoundRectangle 16">
                            <VerticalStackLayout Spacing="10">
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="Scrolling Speed" TextColor="White" FontAttributes="Bold"/>
                                    <Label x:Name="ScrollValLabel" Text="1.0x" TextColor="#00E676" FontAttributes="Bold" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="ScrollSlider" Minimum="0.1" Maximum="3.0" Value="1.0" ThumbColor="#00E676" MinimumTrackColor="#00E676" MaximumTrackColor="#333"/>
                            </VerticalStackLayout>
                        </Border>
                        <Border Stroke="#333" StrokeThickness="1" BackgroundColor="#121212" Padding="20" StrokeShape="RoundRectangle 16">
                            <VerticalStackLayout Spacing="10">
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="Zooming Speed" TextColor="White" FontAttributes="Bold"/>
                                    <Label x:Name="ZoomValLabel" Text="1.0x" TextColor="#00E676" FontAttributes="Bold" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="3.0" Value="1.0" ThumbColor="#00E676" MinimumTrackColor="#00E676" MaximumTrackColor="#333"/>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

            <VerticalStackLayout Grid.Row="2" Spacing="4" HorizontalOptions="Center" Margin="0,10,0,0">
                <Label Text="v1.1.0 (Stable)" TextColor="#555" FontSize="12" HorizontalOptions="Center"/>
                <HorizontalStackLayout Spacing="4" HorizontalOptions="Center">
                    <Label Text="Powered by" TextColor="#444" FontSize="12"/>
                    <Label Text="CeroSoft" TextColor="#00E676" FontSize="12" FontAttributes="Bold"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentView>